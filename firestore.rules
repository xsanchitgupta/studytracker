rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write to chat messages
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    // Allow users to update typing status
    match /chats/{chatId} {
      allow read, write: if request.auth != null;
    }
    // Allow reading user profiles for the sidebar
    match /users/{userId} {
      allow read: if request.auth != null;
    }
  }
}